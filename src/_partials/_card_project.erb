<% collections.projects.resources.each do |project| %>
  <div class="card-project mb-5" >
    <img class="card-project-image" src=<%= project.data.image %> />
    <div class="card-project-info my-3">
      <div class="card-project-title">
        <a href="<%= project.relative_url %>"
          target="_blank"
              class="card-project-about text-decoration-none orange"
              data-project-file="<%= project.data.file_name %>"
              data-action=
              "mouseenter->move-element#getHref mouseout->move-element#resetHref
          mouseenter->display#changeDisplay mouseout->display#changeDisplay
          mouseenter->file-name#getFileName mouseout->file-name#reset">
          <h2 class="orange"><%= project.data.title %></h2>
        </a>
      </div>
      <div class="card-project-description mb-3">
        <p><%= project.data.description %></p>
      </div>
      <div class="card-project-links">
        <a href="<%= project.relative_url %>" class="card-project-about text-decoration-none blue link" data-action="mouseover->move-element#getHref mouseout->move-element#resetHref">
          Sobre
        </a>
        <a href="<%= project.data.project_link %>" class="pt-3 card-project-about text-decoration-none blue link" data-action="mouseover->move-element#getHref mouseout->move-element#resetHref">
          Ir ao projeto
        </a>
        <a href="<%= project.data.github_link %>" class="pt-3 card-project-about text-decoration-none blue link" data-action="mouseover->move-element#getHref mouseout->move-element#resetHref">
          <i class="fab fa-github"></i> CÃ³digo
        </a>
      </div>
    </div>
  </div>
<% end %>
